{
	"include": [
		"src/index.ts",
		"../../packages/kit/src/index.ts",
		"../../packages/wave/src/index.ts"
	],
	"compilerOptions": {
		"outDir": "dist",
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"declaration": true,
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	}
}
