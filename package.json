{
	"name": "wavekit",
	"private": true,
	"scripts": {
		"build": "bun run build:packages && bun run build:apps",
		"build:packages": "bun run --filter \"./packages/*\" build",
		"build:apps": "bun run --filter \"./apps/*\" build",
		"lint": "bunx --bun biome check .",
		"format": "bunx --bun biome check --write --unsafe ."
	},
	"workspaces": ["packages/*", "apps/*"],
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "1.2.3"
	},
	"peerDependencies": {
		"typescript": "^5.7.3"
	}
}
